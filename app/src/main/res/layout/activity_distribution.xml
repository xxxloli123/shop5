<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xxxloli.zshmerchant.Activity.DistributionActivity">

    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="配送管理"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/distribution_service"
        android:background="@color/white1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="配送服务"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/is_huidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="惠递配送"
            android:textColor="@color/blue2" />

        <TextView
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/is_huidi"
            android:layout_marginRight="15dp"
            android:text="生效中"
            android:textColor="#009705"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/location_RL"
        android:layout_marginTop="6dp"
        android:background="@color/white1"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="取货地址"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_marginRight="19dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ding_wei"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:textSize="8sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img"
            android:text="定位当前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:id="@+id/address_TV"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <RelativeLayout
        android:background="@color/white1"
        android:id="@+id/selective_dissemination"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableBottom="@drawable/line"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="选择配送"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imagev"
            android:layout_height="10dp"
            android:layout_width="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/right" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableBottom="@drawable/line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/community_tv"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="配送小区"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_height="10dp"
            android:layout_width="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/right" />

    </RelativeLayout>


</LinearLayout>
