<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加商品"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/scan_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sao" />
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:rowCount="3">

                <RelativeLayout
                    android:id="@+id/show1"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_margin="6dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/line_frame">

                    <ImageView
                        android:id="@+id/first_img"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/first_text"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/first_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/show2"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_margin="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/line_frame"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/second_img"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/second_text"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/second_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="育婴"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/show3"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_margin="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/line_frame"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/thirdly_img"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/thirdly_text"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/thirdly_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="育婴"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_row="1"
                    android:layout_column="0"
                    android:id="@+id/show4"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_margin="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/line_frame"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/fourthly_img"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/fourthly_text"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/fourthly_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_row="2"
                    android:id="@+id/show5"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/line_frame"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/fifth_img"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/fifth_text"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/fifth_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="育婴"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/show6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_row="1"
                    android:background="@drawable/line_frame"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/sixth_img"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toRightOf="@+id/sixth_text"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/sixth_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="育婴"
                        android:textColor="@color/text_color"
                        android:textSize="11sp" />

                </RelativeLayout>

            </GridLayout>

            <ImageView
                android:id="@+id/commodity_img"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:src="@drawable/p" />

            <TextView
                android:id="@+id/img_name"
                android:visibility="gone"
                android:layout_marginTop="6dp"
                android:text="666"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="名称"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/name_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="请输入物品名称(20字以内)"
                android:textColorHint="@color/hint_text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="描述"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/describe_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="请输入物品描述(20字以内)"
                android:textColorHint="@color/hint_text_color"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/background"></View>

            <RelativeLayout
                android:id="@+id/classifyRL"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="分类"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/i"
                    android:text=""
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/i"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line"></View>

            <RelativeLayout
                android:id="@+id/priceRL"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="单价"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/price"
                    android:text="￥"
                    android:textColor="@color/text_color" />

                <EditText
                    android:inputType="number|numberDecimal"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/im"
                    android:background="@null"
                    android:hint="00.00"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line"></View>

            <RelativeLayout
                android:id="@+id/sequenceRL"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="排序号"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/sequence_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/i12"
                    android:text=""
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/i12"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line"></View>

            <RelativeLayout
                android:id="@+id/specificationRL"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="规格"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/iamg"
                    android:text=""
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/iamg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/line"></View>

            <LinearLayout
                android:id="@+id/operationLL"
                android:visibility="gone"
                android:layout_marginRight="18dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/putawayORsold_out_bt"
                    android:textColor="@color/blue"
                    android:text="上架"
                    android:background="@drawable/line_frame_blue"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/delete_bt"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/red"
                    android:text="删除"
                    android:background="@drawable/line_frame_red"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <Button
                android:id="@+id/save_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_corners"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
