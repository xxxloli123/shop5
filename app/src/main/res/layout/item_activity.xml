        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/hint1_text_color"
                android:text="优先级  : "
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/priority_TV"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:text="香蕉君永不迟到"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/hint1_text_color"
                android:text="活动备注说明 : "
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/remark_TV"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:text="香蕉君永不迟到"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/YHQ_name_LL"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/hint1_text_color"
                android:text="优惠券名称 : "
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/YHQ_name_TV"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:text="香蕉君永不迟到"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/money_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="优惠券金额 : "
                android:textColor="@color/hint1_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/money_TV"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="香蕉君永不迟到"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/restrict_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="优惠券使用限制金额 : "
                android:textColor="@color/hint1_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/restrict_TV"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="香蕉君永不迟到"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/peoples_LL"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/hint1_text_color"
                android:text="分享关注人数 : "
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/peoples_TV"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:text="香蕉君永不迟到"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/time_LL"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/hint1_text_color"
                android:text="优惠券使用起止时间 : "
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/time_TV"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:text="香蕉君永不迟到"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="编辑"
                android:textColor="#FF3535"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/issueORsold_out_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="发布"
                android:textColor="@color/red1"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/delete_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="删除"
                android:textColor="@color/red1"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#EFEFF4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="6dp"></LinearLayout>

    </LinearLayout>
