<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xxxloli.zshmerchant.Activity.MJActivity">

    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="满减活动"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="活动名称"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/name_ET"
        android:paddingLeft="6dp"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:hint="例：店铺三周年感恩大回馈"
        android:layout_margin="10dp"
        android:background="@drawable/background_bgall_white_edit"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="优先级"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/priority_TV"
        android:gravity="center"
        android:text="设置优先级"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_margin="10dp"
        android:background="@drawable/background_bgall_white_edit"
        android:layout_width="90dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="活动备注说明"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/explain_TV"
        android:gravity="center"
        android:text="设置活动说明"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_margin="10dp"
        android:background="@drawable/background_bgall_white_edit"
        android:layout_width="110dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:text="请设置满"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/man_ET"
            android:layout_marginLeft="6dp"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:hint=""
            android:background="@drawable/background_bgall_white_edit"
            android:layout_width="40dp"
            android:layout_height="25dp" />

        <TextView
            android:gravity="center_vertical"
            android:text="减"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/minus_ET"
            android:layout_marginLeft="6dp"
            android:paddingLeft="6dp"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:background="@drawable/background_bgall_white_edit"
            android:layout_width="40dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <Button
        android:id="@+id/save_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corners"
        android:text="创建"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>
